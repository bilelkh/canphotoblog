!!! 5
%html.no-js{ lang: "en" }
  %head
    %meta{ charset: "utf-8" }/
    %meta{ http-equiv: "X-UA-Compatible", content: "IE=edge,chrome=1" }/
    %meta{ name: "description", content: "" }/
    %meta{ name: "author", content: "" }/
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }/

    %title
      = apptitle
      :if pagetitle
        = ' | ' + pagetitle

    %link{ rel: "stylesheet", href: "/css/style.css" }/
    %script{ src: "/js/lib/modernizr-1.6.min.js" }

  %body

    #wrap
      #main

        #header
          %ul
            %li.first
              %a{ href: "/" }
                = apptitle
            :if album
              %li
                = album.name
            :if picture
              %li
                %a{ href: picture.album.url } 
                  = picture.album.name
              %li
                = picture.name

        #container
          :if messages
            .gendiv.error
              :each msg in messages
                %p
                  = msg

          = body
          .clearfix

        :if pagination
          .pagination
            :each page in pagination
              :if !page.islink
                %span
                  = page.text
              :if page.islink
                %a{ href: page.url }
                  = page.text

    #footer
      powered by 
      %a{ href: "http://github.com/oozcitak/canphotoblog" }
        canphotoblog

      :if user
        &nbsp;|&nbsp;
        %a{ href: "/admin" }
          admin
        &nbsp;|&nbsp;
        %a{ href: "/logout" }
          logout

      :if !user
        &nbsp;|&nbsp;
        %a{ href: "/login" }
          login

    :if gaKey
      :javascript
        var _gaq = [['_setAccount', '#{gaKey}'], ['_trackPageview']];
         (function(d, t) {
          var g = d.createElement(t),
              s = d.getElementsByTagName(t)[0];
          g.async = true;
          g.src = ('https:' == location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          s.parentNode.insertBefore(g, s);
         })(document, 'script');

